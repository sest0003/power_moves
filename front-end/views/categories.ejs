<!doctype html>
<html lang="en">
  <head>
    
    <%- include('./partials/head.ejs') %>

    <title>Categories</title>

  </head>
  <body>
   
  <%- include('./partials/navbar.ejs') %>

  <%- include('./partials/alertModals.ejs') %>
 
  <div class="content">

    <div class="container">

      <button type="button" class="btn btn-primary btn-block plus" data-bs-toggle="modal" data-bs-target="#addModal">
        Create Category
      </button>
      
      
      <div class="table-responsive custom-table-responsive">
        
        <table data-type="categories" class="table custom-table">

          <thead>
            <tr class="table-head">  
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Created</th>
              <th scope="col">Updated</th>
              <th scope="col">Options</th>
            </tr>
          </thead>

          <tbody>
            <% categories.forEach(function(category, index) { %>
              <tr scope="row" data-category="<%= JSON.stringify(category) %>">
              <td>
                <%= category.id %>
              </td>
              <td>
                <%= category.name %>
              </td>
              <td>
                <%= category.createdAt %>
              </td>
              <td>
                <%= category.updatedAt %>
              </td>
              <td>
                <div class="btn-container">
                  
                 
                <button type="button" class="btn btn-secondary edit" data-id="<%= category.id %>" data-bs-toggle="modal" data-bs-target="#editModal">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"></path>
                  </svg>
                </button>
                

                <form id="deleteForm" action="/categories/delete" method="post">
                  <input type="hidden" name="categoryId" value="<%= category.id %>">
                  <button type="submit" class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                      <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"></path>
                    </svg>
                  </button>
                </form>
                
              </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
   
      </div>
    </div>
  </div>


   <!-- Add modal --> 
   <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Create Category</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form action="/categories/add" method="post"> 
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label"> Brand Name:</label>
              <input type="text" class="form-control" name="name">
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
           
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit modal -->
  <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Name</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form action="/categories/edit" method="post">
            <!-- Hidden ID -->
            <input type="hidden" name="id">

            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">New Name:</label>
              <input type="text" class="form-control" name="name">
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save Category</button>
            </div>
           
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/alertModals.ejs') %>

  <%- include('./partials/scripts.ejs') %>
  <script src="/js/categories.js"></script>

  </body>
</html>