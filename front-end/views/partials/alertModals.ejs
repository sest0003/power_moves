  <!-- Success/Error Modals -->
  <% if (message && message.length > 0) { %>
      <!-- diffrent alert depentent on type of massage -->
     <div class="alert <%= messageType === 'error' ? 'alert-danger' : 'alert-success' %> alert-dismissible fade show"><%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
